<!-- views/tracker.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">

    <!-- Navigation Bar -->
    <nav class="bg-green-500 p-4 text-white">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-xl font-bold">CalorieScan</h1>
            <ul class="flex space-x-4 items-center">
                <li><a href="/dashboard" class="hover:text-gray-200">Home</a></li>
                <li><a href="/profile" class="hover:text-gray-200">Profile</a></li>
                <li><a href="/settings" class="hover:text-gray-200">Settings</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin/dashboard" class="hover:text-gray-200">Admin</a></li>
                <% } %>
                
                <li>
                <li>
                    <a href="/logout" class="ml-4 inline-block bg-red-500 py-2 px-4 rounded-lg hover:bg-red-600 transition duration-200">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mx-auto mt-10">
        <div class="bg-white shadow-lg rounded-lg p-8 max-w-lg w-full mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-center text-green-600">Food Tracker</h1>
            <form action="/tracker/log" method="POST">
                <div>
                    <label for="item" class="block mb-2">Food Item:</label>
                    <input type="text" name="foodItem" required class="border p-2 rounded w-full">
                </div>
                <div class="mt-4">
                    <label for="weight" class="block mb-2">Weight (grams):</label>
                    <input type="number" name="weight" required class="border p-2 rounded w-full">
                </div>
                <div class="mt-4">
                    <label for="date" class="block mb-2">Date:</label>
                    <input type="date" name="date" required class="border p-2 rounded w-full">
                </div>
                <button type="submit" class="mt-4 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition duration-200 w-full">Log Food</button>
            </form>
        </div>
    </div>

    <footer class="bg-green-500 text-white py-4">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Nutrition Dashboard. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
